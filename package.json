{
  "name": "lonely-wiki",
  "version": "0.1.0",
  "description": "A personal offline Wiki application with Markdown support and tag-based organization",
  "author": "Lonely Wiki Contributors <contact@example.com>",
  "private": true,
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:vite": "vite",
    "db:init": "node src/db/init.js",
    "build": "npm run db:init && npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "electron-builder --publish never",
    "build:win": "npm run db:init && npm run build:vite && electron-builder --win --publish never",
    "build:mac": "npm run db:init && npm run build:vite && electron-builder --mac --publish never",
    "build:linux": "npm run db:init && npm run build:vite && electron-builder --linux --publish never",
    "build:all": "npm run db:init && npm run build:vite && electron-builder -mwl --publish never",
    "preview": "vite preview"
  },
  "dependencies": {
    "marked": "^17.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.8",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.lonely-wiki.app",
    "productName": "Lonely Wiki",
    "files": [
      "dist/**/*",
      "src/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lonely Wiki"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "notarize": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
