{
  "name": "lonely-wiki",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:vite": "vite",
    "db:init": "node src/db/init.js",
    "build": "npm run db:init && vite build && electron-builder",
    "build:vite": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "marked": "^17.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.8",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.lonely-wiki.app",
    "productName": "Lonely Wiki",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
